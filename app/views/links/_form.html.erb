<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :url, class: "form-label" %>
    <%= form.text_field :url, class: "form-control" %>
  </div>

  <div data-controller="select" data-action="change->select#toggleInput">

    <div class="field mb-3">
      <%= form.label :link_category, class: "form-label" %>
      <%= form.select :link_category, Link.link_categories.values, {}, class:'form-select' %>
    </div>

    <div id="password" class="field mb-3 hidden" data-select-target="passwordField">
      <%= form.label :password, class: "form-label" %>
      <%= form.text_field :password, class: "form-control" %>
    </div>

    <div id="expiration_date" class="field mb-3 hidden" data-select-target="expirationDateField">
      <%= form.label :expiration_date, class: "form-label" %>
      <%= form.datetime_field :expiration_date, class: "form-control" %>
    </div>
  
  </div>

  <div>
    <%= form.submit "Create Link", class: "btn btn-light" %>
  </div>
<% end %>
