<%= form_with(model: link) do |form| %>
  <% if link.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
        <% link.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div data-controller="select" data-action="change->select#toggleInput">
    <div class="field">
      <%= form.label :link_category %>
      <%= form.select :link_category, Link.link_categories.values %>
    </div>

    <div id="password" class="field hidden" data-select-target="passwordField">
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>

    <div id="expiration_date" class="field hidden" data-select-target="expirationDateField">
      <%= form.label :expiration_date %>
      <%= form.datetime_field :expiration_date %>
    </div>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
