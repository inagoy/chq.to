<%=  render 'links/link', link: link %>
<div class="row justify-content-start px-4">
    <span class="badge p-3 rounded-pill text-bg-success col-1"> Temporary </span>
</div>
<div class="w-50 mx-auto">
    <hr>
    <% if link.accessible? %>
    <div>This link expires: <%= link.expiration_date.to_formatted_s(:day)%> at <%= link.expiration_date.to_formatted_s(:hour)%></div>
    <% else %>
    <div class="text-danger">This link expired</div>
    <% end %>
    <hr>
</div>